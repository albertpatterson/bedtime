{
    "manifest_version": 2,
    "name": "bedtime",
    "description": "A simple chrome extension to remind the user of bedtime",
    "version": "1.0",
    "browser_action": {
        "default_icon": "bedtime.png",
        "default_popup": "popup/index.html"
    },
    "permissions": ["storage", "alarms", "commands"],
    "commands":{
      "test":{
        "suggested_key":{
          "default": "Ctrl+Shift+S"
        },
        "description":"test the extension"
      }
    },
    "background": {
        "scripts":["background/background.js"]
      },
    "content_scripts": [
      { "matches": ["<all_urls>"],
        "js": ["injected/script/bedTimeContent.js"],
        "css": ["injected/style/bedtimeContent.css"]
      }]
  }